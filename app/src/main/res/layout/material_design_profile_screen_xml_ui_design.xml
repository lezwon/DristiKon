<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:fadeScrollbars="true"
    android:scrollIndicators="right"
    android:isScrollContainer="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mr_dialog_material_background_light"
        tools:background="@android:color/holo_red_dark">

        <Button
            android:id="@+id/dismiss"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:text="Dismiss"
            />
        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/navigation_header_image_l" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@layout/profile_circular_border_imageview"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:backgroundTintMode="src_over"
            android:elevation="5dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_profile_photo" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#ebca0007"
            android:elevation="4dp"
            android:paddingBottom="12dp">


            <ImageView
                android:id="@+id/add_friend"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="26dp"
                android:layout_toLeftOf="@+id/drop_down_option_menu"
                android:background="@layout/profile_circular_border_imageview"
                android:src="@drawable/hat" />

            <ImageView
                android:id="@+id/drop_down_option_menu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="26dp"
                android:background="@layout/profile_circular_border_imageview"
                android:src="@drawable/marker" />

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Lawliet"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:text="Detective L from DeathNote"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="16sp"
                android:textStyle="normal|bold|italic" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="18dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/game_level"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#ebca1007"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Game Level"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_progress_text_color"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/cases_solved"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#ebca1007"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Cases solved"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_progress_text_color"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/player_badges"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#ebca1007"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Badges"
                android:textAlignment="center"
                android:textColor="@color/cast_expanded_controller_progress_text_color"
                android:textStyle="normal|bold" />



        </LinearLayout>
    </RelativeLayout>
</ScrollView>